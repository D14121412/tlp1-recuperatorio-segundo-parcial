<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="row mb-2">
      <div class="col-md-5">
        <a href="/" id="btnRegresar" class="btn btn-sm btn-primary">Regresar</a>
        <a href="/" class="btn btn-sm btn-info text-light">Inicio</a>
      </div>
    </div>

    <div class="mx-auto">
      <form id="formNuevaReserva" method="POST" class="rounded border p-3">
        <h3 class="mb-3 text-center bg-primary text-light rounded p-2">
          Nueva Reserva
        </h3>
        <div class="row">
          <div class="col col-md-6 col-sm-12 mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input
              type="text"
              required="true"
              class="form-control"
              id="nombre"
              name="nombre"
            />
          </div>
          <div class="col col-md-6 col-sm-12 mb-3">
            <label for="apellido" class="form-label">Apellido</label>
            <input
              type="text"
              required="true"
              class="form-control"
              id="apellido"
              name="apellido"
            />
          </div>
        </div>
        <div class="row">
          <!-- Fecha Reserva -->
          <div class="col col-md-6 col-sm-12 mb-3">
            <label for="fechareserva" class="form-label"
              >Fecha de reserva</label
            >
            <input
              type="datetime"
              required="true"
              class="form-control"
              id="fechareserva"
              name="fechareserva"
            />
          </div>

          <!-- Fecha Salida -->
          <div class="col col-md-6 col-sm-12 mb-3">
            <label for="fechasalida" class="form-label">Fecha de alida</label>
            <input
              type="datetime"
              required="true"
              class="form-scontrol"
              id="fechasalida"
              name="fechasalida"
            />
          </div>
          <!-- Fecha de llagada -->
          <div class="col col-md-6 col-sm-12 mb-3">
            <label for="fechallegada" class="form-label"
              >Fecha de llegada</label
            >
            <input
              type="datetime"
              required="true"
              class="form-control"
              id="fechallegada"
              name="fechallegada"
            />
          </div>
        </div>

        <div class="row">
          <!-- Origen -->
          <div class="col col-sm-12 col-md-6 mb-3">
            <label for="habitacion" class="form-label">Origen</label>
            <input
              type="text"
              required="true"
              class="form-control"
              id="origen"
              name="origen"
            />
          </div>

          <!-- destino -->
          <div class="col col-sm-12 col-md-6 mb-3">
            <label for="habitacion" class="form-label">Destino</label>
            <input
              type="text"
              required="true"
              class="form-control"
              id="destino"
              name="destino"
            />
          </div>

          <!-- Precio -->
          <div class="col col-sm-12 col-md-6 mb-3">
            <label for="precio_total" class="form-label">Precio Total</label>
            <input
              type="number"
              required="true"
              class="form-control"
              id="preciototal"
              name="precio_total"
            />
          </div>
        </div>

        <div class="row">
          <!-- Telefono -->
          <div class="col col-sm-12 col-md-6 mb-3">
            <label for="telefono" class="form-label">Tel√©fono</label>
            <input
              type="text"
              required="true"
              class="form-control"
              id="telefono"
              name="telefono"
            />
          </div>

          <!-- Email contacto -->
          <div class="col col-sm-12 col-md-6 mb-3">
            <label for="email" class="form-label">Email contacto:</label>
            <input
              type="email"
              required="true"
              class="form-control"
              id="email"
              name="email"
            />
          </div>
        </div>

        <div class="row d-flex align-items-center justify-content-end">
          <div class="col-sm-12 col-md-2 col-lg-2 col-xl-2 col-2 mb-1">
            <button type="submit" class="w-100 btn btn-sm btn-primary">
              Guardar
            </button>
          </div>
          <div class="col-sm-12 col-md-2 col-lg-2 col-xl-2 col-2 mb-1">
            <a href="/" class="w-100 btn btn-sm btn-secondary">Cancelar</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/crear-reserva.js"></script>

<%- include('partials/footer') %>
